@using CoinsUX.Models;

@{
    ViewBag.Title = "ListCoins";
}

<h2>ListCoins</h2>

<div class="container">
    @*<div class="table-responsive">*@
    <div class="row">
        <table id="tblCoins" class="table table-striped table-hover table-bordered dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th class="thead-light">Coin ID</th>
                    <th class="thead-light">Coin Symbol</th>
                    <th class="thead-light">Coin Name</th>
                </tr>
            </thead>
        </table>
    </div>
    @*</div>*@
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script type="text/javascript">

        var filterValues = {};
        $('#tblCoins').DataTable({
            serverSide: true,
            "columns": [
                { "data": "ID", "name": "ID", "autoWidth": true },
                { "data": "Symbol", "name": "Symbol", "autoWidth": true },
                { "data": "Name", "name": "Name", "autoWidth": true },
            ],
            "processing": true, // To show progress bar
            "serverSide": true, // To process server side
            "filter": true, // this is for enabling filter (search box)
            "ajax": {
                "url": "/Coins/GetCoins",
                "type": "POST",
                "datatype": "json"
            }
        });
    </script>
}
